<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemView"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:layout_marginRight="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/our_location"
        android:scaleType="fitXY"/>

    <Button
        android:id="@+id/btn_now_open"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/now_open"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12"
        android:fontFamily="@font/graphik"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#B0111112"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txt_location_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STANMORE"
            style="@style/TextLabel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"/>

        <ImageView
            android:id="@+id/img_list_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

</RelativeLayout>